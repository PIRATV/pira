<% content_for :title, t('thanks') %>
<div class="container">
  <div class="center-block">
    <h2 style="text-align: center"><%= t 'thanks' %></h2>

    <div class="row">
      <div style="margin-left:-50px;text-align: center;text-indent: 0">
        <% Dir.glob("#{Rails.root}/app/assets/images/thanks/*").reverse.each do |path| %>
            <div style="display: inline-block">
              <%= link_to image_path(path.sub("#{Rails.root}/app/assets/images/", '')), rel: 'prettyPhoto[gallery]', title: '' do %>
                  <%= image_tag image_path(path.sub("#{Rails.root}/app/assets/images/", '')), style: 'max-height:300px' %>
              <% end %>
            </div>
        <% end %>
        <br>
        <br>
      </div>
    </div>
  </div>
</div>