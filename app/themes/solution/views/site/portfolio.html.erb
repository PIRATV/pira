<% i = 0; content_for :title, "#{t 'Portfolio'} - #{t @album.album_name}" %>
<% if @portfolios.empty? %>

    <%= t 'Фотографий в данном альбоме еще не добавили..' %>

<% else %>

    <h2 style="text-align: center;text-transform: uppercase"><%= t @album.album_name %></h2>

    <% content_for :portfolio do %>
        <%= javascript_include_tag 'solution/portfolio/application', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag 'solution/portfolio/application', 'data-turbolinks-track' => true %>
    <% end %>

    <div id="portfolios" class="portfolio_image">

      <% @portfolios.each do |unit| %>
          <%= render 'portfolio', unit: unit %>
          <% i = 1 if i.zero? %>
      <% end %>

      <% if i.zero? %>
          <%= t 'Фотографий в данном альбоме еще не добавили..' %>
      <% end %>

    </div>
    <div class="clearfix"></div>

    <%= paginate @portfolios %>

<% end %>

<div class="link_back">
  <%= link_to t('Back'), create_url(t 'Portfolio') %>
</div>