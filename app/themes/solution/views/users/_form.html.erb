<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= simple_form_for @user do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.label :email %>
            <br/>
            <%= f.email_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <br/>
            <%= f.password_field :password %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %>
            <br/>
            <%= f.password_field :password_confirmation %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
      <% end %>
    </div>
  </div>
</div>